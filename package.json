{
  "name": "kafka-postgres-test",
  "version": "1.0.0",
  "description": "Test project for Kafka and PostgreSQL with Node.js",
  "main": "src/consumer.ts",
  "scripts": {
    "build": "tsc",
    "init:db": "ts-node src/init-db.ts",
    "start:consumer": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/consumer.ts",
    "start:producer": "ts-node src/producer.ts",
    "start:api": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/api.ts"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "cli-progress": "^3.12.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "kafkajs": "^2.1.0",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.12",
    "@types/pg": "^8.6.1",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  }
}
